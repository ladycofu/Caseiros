<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    tools:context="com.athome.Login.Splash">
    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Logoimage"
            android:layout_width="240dp"
            android:layout_marginRight="20dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/logo2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Verifica Tu conexion a Internet"
        android:id="@+id/tvwComprobarInternet"
        android:layout_below="@+id/fullscreen_content_controls"
        android:visibility="invisible"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intenta de Nuevo"
        android:id="@+id/btnIntentar"
        android:visibility="invisible"
        android:layout_below="@+id/tvwComprobarInternet"
        android:layout_centerHorizontal="true"
        android:onClick="intentarNuevo" />

</RelativeLayout>
