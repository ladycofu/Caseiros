<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.athome.TabsPedido.DetailDialog"
    android:onClick="onHacerPedidoClicked">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/md_white_1000_75">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/image_menu_dialog"
            android:background="@drawable/plato_1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AJIACO"
            android:textSize="40dp"
            android:id="@+id/textView_nombre_plato_dialog"
            android:layout_below="@+id/image_menu_dialog"
            android:layout_alignLeft="@+id/image_menu_dialog"
            android:layout_alignStart="@+id/image_menu_dialog"
            android:layout_marginTop="20dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar_dialog"

            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView_nombre_plato_dialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView_descrip_plato_dialog"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/ratingBar_dialog"
            android:layout_alignLeft="@+id/textView_nombre_plato_dialog"
            android:layout_alignStart="@+id/textView_nombre_plato_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12.000"
            android:id="@+id/textView_precio_dialog"
            android:textColor="@color/md_red_900"
            android:textSize="20dp"
            android:layout_below="@+id/textView_descrip_plato_dialog"
            android:layout_alignRight="@+id/image_menu_dialog"
            android:layout_alignEnd="@+id/image_menu_dialog"
            android:layout_marginTop="22dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/Button_pedido_dialog"
            android:textColor="@color/md_black_1000_75"
            android:text="HACER PEDIDO"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:background="@color/md_deep_orange_400"
            android:onClick="HacerPedidoDialog" />

    </RelativeLayout>

</ScrollView>
